<div class="container center">
    <div class="row center">
        <h5><i class="fab fa-bitcoin"></i> Welcome new user <i class="fab fa-bitcoin"></i></h5>
    </div>
    <div class="row">
        <form class="col l4 m6 s4 center signup">
            <div class="row center">
                <div class="input-field col s12 offset-s12">
                    <input id="username-signup" type="text" class="validate center">
                    <label for="name">Name</label>
                </div>
            </div>

            <div class="row">
                <div class="input-field col s12 offset-s12">
                    <input id="email-signup" type="email" class="validate">
                    <label for="email">Email</label>
                </div>
            </div>

            <div class="row">
                <div class="input-field col s12 offset-s12">
                    <input id="password-signup" type="password" class="validate">
                    <label for="password">Password</label>
                </div>
            </div>
        </form>
    </div>

    <div class="row">
        <button type="submit" id="signup-form" class="waves-effect waves-light btn"><i class="far fa-save"></i></button>
    </div>
    <br>

    <div class="row">
        <a href="/login">
            <h5>Returning user? Click here to login</h5>
        </a>
    </div>
</div>


<script src="./js/signup.js"></script>