 {{#each posts as |post|}}
    <div class="container post z-depth-3">

        <div class="row">
            <div class="col-8">
                <h3>{{post.title}}</h3>
                <h4>{{user.name}},</h4><h4>{{post.date_created}}</h4>
            </div>

        </div>
        <div class="row blog_content">
           {{post.content}}
        </div>
        <a class="waves-effect waves-light btn" id="commentBtn"><i class="far fa-comment"></i></a>

    </div>
    {{/each}}